<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- LoginServlet 設定 -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.example.fave.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/fave</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.fave.LogReDeleFile.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!-- RegisterServlet 設定 -->
    <servlet>
        <servlet-name>ReServlet</servlet-name>
        <servlet-class>com.example.fave.LogReDeleFile.ReServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

<!--DeleServle 設定-->
    <servlet>
        <servlet-name>DeleServlet</servlet-name>
        <servlet-class>com.example.fave.LogReDeleFile.DeleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleServlet</servlet-name>
        <url-pattern>/dele</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>com.example.fave.GoodsFile.GoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/goods</url-pattern>
    </servlet-mapping>

<!-- ↓　Faveファイルマッピング -->
    <servlet>
        <servlet-name>Fave</servlet-name>
        <servlet-class>com.example.fave.FaveFile.Fave</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Fave</servlet-name>
        <url-pattern>/fave_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FaveAdd</servlet-name>
        <servlet-class>com.example.fave.FaveFile.FaveAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaveAdd</servlet-name>
        <url-pattern>/fave_add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FaveDetail</servlet-name>
        <servlet-class>com.example.fave.FaveFile.FaveDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaveDetail</servlet-name>
        <url-pattern>/fave_detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FaveEdit</servlet-name>
        <servlet-class>com.example.fave.FaveFile.FaveEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaveEdit</servlet-name>
        <url-pattern>/fave_edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Relate</servlet-name>
        <servlet-class>com.example.fave.FaveFile.RelateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Relate</servlet-name>
        <url-pattern>/relate</url-pattern>
    </servlet-mapping>
</web-app>
